<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tool="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="date"
            type="String" />
        <variable
            name="name"
            type="String" />
        <variable
            name="time"
            type="String" />
        <variable
            name="kibun_image"
            type="String" />
        <variable
            name="kibun_text"
            type="String" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/headerBackground"
            android:orientation="horizontal">
            <!-- 戻るボタン -->
            <Button
                android:id="@+id/left_button"
                android:layout_width="23dp"
                android:layout_height="36dp"
                android:background="@drawable/arrow_l"
                android:layout_gravity="left|center"
                tools:ignore="RtlHardcoded"
                android:layout_marginStart="20dp"/>
            <!-- 日付 -->
            <TextView
                android:id="@+id/today_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@{date}"
                tools:text="2020/09/09(月)"
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="@color/text"
                android:layout_weight="1"
                android:layout_marginEnd="24dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/backGround"
            tools:context="com.mtzack.chat.MainActivity"
            android:layout_marginBottom="90dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <!-- ユーザーアイコン -->
                <ImageView
                    android:id="@+id/user_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/noimage"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"/>
                <!-- ユーザー名 -->
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/text"
                    android:text="@{name}"
                    android:layout_gravity="center"
                    android:layout_weight="1"/>
                <!-- 気分アイコン -->
                <ImageView
                    android:id="@+id/kibun"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/kibun_icon1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="12dp"
                    android:layout_gravity="center|right" />
                <!-- 投稿日時 -->
                <TextView
                    android:id="@+id/kibun_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:textSize="12sp"
                    android:text="13:54"
                    tools:text="13:54"
                    tools:ignore="RtlHardcoded"
                    android:layout_marginEnd="8dp"
                    android:gravity="right|center"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="@color/border" />

            <!-- 日記画像 -->
            <ImageView
                android:id="@+id/kibun_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/noimage"
                android:layout_marginTop="10dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="20dp"
                android:id="@+id/scrollView">

                <!-- 日記本文 -->
                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:paddingBottom="10dp"
                    android:text="@{kibun_text}" />
            </ScrollView>
        </LinearLayout>

        <!-- タブ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:orientation="horizontal"
            android:layout_marginTop="-120dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/tab1_on"
                android:layout_weight="1"
                android:layout_gravity="bottom"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="126dp"
                android:src="@drawable/tab2_off"
                android:layout_weight="1"
                android:layout_gravity="bottom"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/tab3_off"
                android:layout_weight="1"
                android:layout_gravity="bottom"/>
        </LinearLayout>

    </LinearLayout>
</layout>